{
  "name": "enflujo-rastros",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "aplicaciones/*"
  ],
  "scripts": {
    "dev": "yarn workspace www dev",
    "build": "yarn borrar && yarn workspace www build && yarn workspace servidor build",
    "preview": "yarn workspace www preview",
    "probar": "yarn workspace servidor preview",
    "borrar": "rimraf ./servidor",
    "servidor": "yarn workspace servidor dev",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write --list-different ."
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5"
  }
}
